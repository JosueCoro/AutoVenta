
@{
    ViewBag.Title = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Se incluye SweetAlert2 para notificaciones modernas -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="card">
    <div class="card-header">
        <i class="fas fa-user-circle"></i> Lista de Usuarios
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success mb-3" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <table id="tablausuarios" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>CI</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal para Crear/Editar Usuario -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="modalTitle">Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input id="txtid" type="hidden" value="0" />
                <div class="row g-2">
                    <div class="col-sm-6">
                        <label for="txtNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombre" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtApellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="txtApellido" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtCi" class="form-label">CI</label>
                        <input type="text" class="form-control" id="txtCi" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtCorreo" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="txtCorreo" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtContraseña" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="txtContraseña" autocomplete="off">
                        <p class="text-muted small mt-1" id="passwordHelperText">Deja este campo vacío si no deseas cambiar la contraseña.</p>
                    </div>
                    <div class="col-sm-6">
                        <label for="ddlRol" class="form-label">Rol</label>
                        <select id="ddlRol" class="form-select"></select>
                    </div>
                    <div class="col-sm-6">
                        <label for="ddlEstado" class="form-label">Estado</label>
                        <select id="ddlEstado" class="form-select">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var tabladata;
        var filaSeleccionada;

        document.addEventListener('DOMContentLoaded', async function () {
            // Llenar el dropdown de roles
            await llenarRoles();

            // Inicializar la tabla de DataTables
            tabladata = $('#tablausuarios').DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    "url": '@Url.Action("ListarUsuarios", "Usuario")',
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "nombre" },
                    { "data": "apellido" },
                    { "data": "ci" },
                    { "data": "correo" },
                    { "data": "nombre_rol" },
                    {
                        "data": "estado",
                        "render": function (data) {
                            if (data) {
                                return '<span class="badge bg-success">Activo</span>';
                            } else {
                                return '<span class="badge bg-danger">Inactivo</span>';
                            }
                        }
                    },
                    {
                        "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar me-2"><i class="fas fa-pen"></i></button>' +
                                          '<button type="button" class="btn btn-danger btn-sm btn-eliminar"><i class="fas fa-trash"></i></button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "125px"
                    }
                ],
                "language": {
                    "url": '//cdn.datatables.net/plug-ins/2.2.1/i18n/es-ES.json',
                },
            });

            // Evento de clic para el botón Editar de la tabla
            $("#tablausuarios tbody").on("click", '.btn-editar', function () {
                filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                abrirModal(data);
            });

            // Evento de clic para el botón Eliminar de la tabla
            $("#tablausuarios tbody").on("click", '.btn-eliminar', function () {
                filaSeleccionada = $(this).closest("tr");
                var data = tabladata.row(filaSeleccionada).data();
                Eliminar(data);
            });
        });

        // Función para llenar el dropdown de roles
        async function llenarRoles() {
            try {
                const response = await fetch('@Url.Action("ListarRoles", "Usuario")', { method: 'GET' });
                const roles = await response.json();
                const ddlRol = document.getElementById("ddlRol");
                ddlRol.innerHTML = ''; // Limpiar opciones anteriores
                roles.data.forEach(rol => {
                    const option = document.createElement('option');
                    option.value = rol.id_rol;
                    option.textContent = rol.nombre_rol;
                    ddlRol.appendChild(option);
                });
            } catch (error) {
                Swal.fire('Error', 'No se pudieron cargar los roles.', 'error');
                console.error(error);
            }
        }

        // Limpia el formulario y oculta el mensaje de error
        function Limpiar() {
            document.getElementById("txtid").value = 0;
            document.getElementById("txtNombre").value = "";
            document.getElementById("txtApellido").value = "";
            document.getElementById("txtCi").value = "";
            document.getElementById("txtCorreo").value = "";
            document.getElementById("txtContraseña").value = "";
            document.getElementById("ddlRol").selectedIndex = 0;
            document.getElementById("ddlEstado").selectedIndex = 0;

            // Habilitar el correo
            document.getElementById("txtCorreo").disabled = false;
        }

        // Abre el modal para crear o editar
        function abrirModal(json) {
            Limpiar();
            if (json != null) {
                document.getElementById("txtid").value = json.id_usuario;
                document.getElementById("txtNombre").value = json.nombre;
                document.getElementById("txtApellido").value = json.apellido;
                document.getElementById("txtCi").value = json.ci;
                document.getElementById("txtCorreo").value = json.correo;
                document.getElementById("ddlRol").value = json.rol_id_rol;
                document.getElementById("ddlEstado").value = json.estado ? 1 : 0;

                // Deshabilitar el correo para la edición
                document.getElementById("txtCorreo").disabled = true;

                document.getElementById("modalTitle").textContent = "Editar Usuario";
                document.getElementById("passwordHelperText").style.display = 'block'; // Mostrar la ayuda
            } else {
                document.getElementById("modalTitle").textContent = "Crear Nuevo Usuario";
                document.getElementById("passwordHelperText").style.display = 'none'; // Ocultar la ayuda
            }
            $('#FormModal').modal('show');
        }

        // Función para guardar un usuario usando FETCH y SweetAlert2
        async function Guardar() {
            const usuario = {
                id_usuario: parseInt(document.getElementById("txtid").value),
                nombre: document.getElementById("txtNombre").value,
                apellido: document.getElementById("txtApellido").value,
                ci: document.getElementById("txtCi").value,
                correo: document.getElementById("txtCorreo").value,
                contraseña: document.getElementById("txtContraseña").value,
                estado: document.getElementById("ddlEstado").value === '1',
                rol_id_rol: parseInt(document.getElementById("ddlRol").value)
            };

            const esNuevo = usuario.id_usuario === 0;

            Swal.fire({
                title: esNuevo ? "Registrando usuario..." : "Actualizando usuario...",
                html: "Por favor, espera...",
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            try {
                const response = await fetch('@Url.Action("GuardarUsuario", "Usuario")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json; charset=utf-8' },
                    body: JSON.stringify({ objeto: usuario })
                });

                if (!response.ok) throw new Error("Error en la petición.");

                const data = await response.json();

                if (data.resultado) {
                    Swal.fire({
                        title: esNuevo ? "¡Registrado!" : "¡Actualizado!",
                        text: esNuevo ? "El usuario se ha registrado correctamente." : "Los datos del usuario se han actualizado correctamente.",
                        icon: 'success'
                    });

                    // Actualizamos la tabla
                    if (esNuevo) {
                        usuario.id_usuario = data.resultado;
                        usuario.nombre_rol = document.querySelector(`#ddlRol option[value="${usuario.rol_id_rol}"]`).textContent;
                        tabladata.row.add(usuario).draw(false);
                    } else {
                        usuario.nombre_rol = document.querySelector(`#ddlRol option[value="${usuario.rol_id_rol}"]`).textContent;
                        tabladata.row(filaSeleccionada).data(usuario).draw(false);
                    }

                    $('#FormModal').modal("hide");
                } else {
                    Swal.fire({ title: "¡Error!", text: data.mensaje, icon: 'error' });
                }
            } catch (error) {
                Swal.fire({ title: "¡Error!", text: "Ocurrió un error inesperado al guardar.", icon: 'error' });
                console.error(error);
            }
        }

        // Función para eliminar lógicamente un usuario
        async function Eliminar(usuario) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "El usuario será inactivado y no podrá iniciar sesión.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, inactivar',
                cancelButtonText: 'Cancelar'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: "Inactivando...",
                        text: "Por favor, espera.",
                        allowOutsideClick: false,
                        didOpen: () => { Swal.showLoading(); }
                    });

                    try {
                        const response = await fetch('@Url.Action("EliminarUsuario", "Usuario")', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json; charset=utf-8' },
                            body: JSON.stringify({ id: usuario.id_usuario })
                        });

                        if (!response.ok) throw new Error("Error en la petición.");

                        const data = await response.json();

                        if (data.resultado) {
                            usuario.estado = false;
                            tabladata.row(filaSeleccionada).data(usuario).draw(false);
                            Swal.fire('¡Inactivado!', 'El usuario ha sido inactivado.', 'success');
                        } else {
                            Swal.fire('Error', data.mensaje, 'error');
                        }
                    } catch (error) {
                        Swal.fire('Error', 'Ocurrió un error inesperado al inactivar.', 'error');
                        console.error(error);
                    }
                }
            });
        }
    </script>
}


